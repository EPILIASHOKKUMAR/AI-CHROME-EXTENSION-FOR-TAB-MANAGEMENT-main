{
  "manifest_version": 3,
  "name": "Smart URL Detector",
  "version": "1.0",
  "description": "Detects URL safety with user feedback system and real-time notifications",
"permissions": [
  "activeTab",
  "storage",
  "tabs",
  "notifications",
  "webNavigation",
  "background"
],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}